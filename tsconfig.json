{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "strict": true,
        "alwaysStrict": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "lib": [
            "es6",
            "dom",
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "example",
        "esbuild.js"
    ]
}
